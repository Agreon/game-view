{
    "$schema": "https://turborepo.org/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "./dist/**"
            ]
        },
        "watch": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**"
            ]
        },
        "test": {
            "dependsOn": [
                "^build"
            ],
            "outputs": []
        },
        "lint": {
            "outputs": []
        },
        "lint:fix": {
            "outputs": []
        }
    },
    "globalDependencies": [
        ".env",
        "tsconfig.json",
        ".eslintrc.js",
        "pnpm-lock.yaml"
    ]
}